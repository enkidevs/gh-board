{
  "name": "gh-board",
  "version": "0.0.0",
  "description": "kanban board using just GitHub",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src --ext .js --ext .jsx",
    "start": "webpack-dev-server --progress --colors",
    "build": "NODE_ENV=production webpack --optimize-minimize --progress --colors",
    "build:dev": "webpack --progress --colors",
    "start-webdriver": "webdriver-manager update && webdriver-manager start",
    "test:only": "ava --verbose --serial",
    "pretest": "npm run lint",
    "test": "./script/run-test.sh",
    "deploy": "./script/deploy.sh",
    "prettier:base": "prettier --write",
    "prettify": "find . -name \"*.jsx\" -o -name \"*.js\" -o -name \"*.less\" | grep -v -f .gitignore | xargs npm run prettier:base"
  },
  "author": "Philip Schatz",
  "license": "AGPL3.0",
  "devDependencies": {
    "ava": "^0.18.0",
    "babel-core": "^6.3.17",
    "babel-eslint": "^7.1.0",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "css-loader": "^0.27.0",
    "eslint": "^4.1.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.1.0",
    "extract-text-webpack-plugin": "^2.1.2",
    "http-server": "^0.10.0",
    "less": "^2.5.3",
    "less-loader": "^3.0.0",
    "node-libs-browser": "^2.0.0",
    "parallelshell": "^3.0.1",
    "prettier": "^1.10.2",
    "webdriver-manager": "^12.0.6",
    "webdriverio": "^4.5.2",
    "webpack": "^3.0.0",
    "webpack-dev-server": "^2.5.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.3.14",
    "bootstrap": "^3.3.6",
    "c3": "^0.4.11",
    "classnames": "^2.2.1",
    "d3": "^4.3.0",
    "dexie": "2.0.0-beta.7",
    "eslint-plugin-duck": "0.5.6",
    "gfm-linkify": "^0.1.0",
    "history": "^3.2.1",
    "moment": "^2.18.1",
    "octicons": "^5.0.1",
    "octokat": "^0.6.2",
    "prop-types": "^15.6.0",
    "puzzle-script": "0.0.2",
    "qs": "^6.3.0",
    "react": "^15.3.2",
    "react-bootstrap": "^0.31.0",
    "react-dnd": "^2.1.2",
    "react-dnd-html5-backend": "^2.1.2",
    "react-dom": "^15.3.2",
    "react-octicons": "0.0.4",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.0",
    "react-router-redux": "^4.0.7",
    "recordo": "^0.0.6",
    "reduck": "0.2.1",
    "redux": "^3.6.0",
    "redux-logger": "^3.0.6",
    "redux-optimist": "^0.0.2",
    "redux-optimist-promise": "^0.8.0",
    "redux-toast-feedback": "^0.1.0",
    "ultramarked": "^1.7.0",
    "underscore": "^1.8.3"
  },
  "prettier": {
    "proseWrap": "never",
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": false
  }
}
